@{
  Layout = "_Layout";
}
<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Ellas Order's</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link rel="stylesheet" href="~/css/styles.css">
</head>

<body>
  <h1>Hi, Ella!</h1>
  <h2>Want to add a new Vendor? Let's do it!</h2>
  <br>
  <div class="container" id="newvendor">
    <form action="/vendors" method="post">
      <label for="vendorName"><b>Vendor name!</b></label>
      <input id="vendorName" name="vendorName" type="text">
      <label for="vendorInfo"><b>Vendor Information!</b></label>
      <input id="vendorInfo" name="vendorInfo" type="text">
      <button id="add" type="submit">Let's get them added!</button>
    </form>
  </div>
  <p><a href="/vendors">Return to your vendor's list!</a></p>
  <p><a href="/">Return to homepage!</a></p>
</body>